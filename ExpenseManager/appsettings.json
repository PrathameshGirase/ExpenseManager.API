{
  "ConnectionStrings": {
    "ExpenseManagerConnectionString": "Server=(localdb)\\mssqllocaldb;Database=ExpenseManagerAPIDb; Trusted_Connection=True; MultipleActiveResultSets=True"
  },

  "JwtSettings": {
    "Issuer": "ExpenseManagerAPI",
    "Audience": "ExpenseManagerAPIClient",
    "DurationInMinutes": 10,
    "key": "YourSuperSecretKey"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Hotel Listing API",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"

}
